{
  "name": "@doodle-together/database",
  "version": "0.0.1",
  "description": "Draw with friends online.",
  "author": {
    "name": "Faustino Zanetto",
    "email": "zanettofaustino@gmail.com"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:create": "prisma migrate dev --create-only",
    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push --skip-generate",
    "db:seed": "tsx src/seed.ts",
    "db:generate": "yarn pnpify prisma generate",
    "dev": "tsup --watch",
    "format": "prisma format",
    "lint": "eslint \"src/**/*.ts\"",
    "prebuild": "npm run db:generate",
    "predev": "npm run db:generate",
    "studio": "prisma studio"
  },
  "engines": {
    "node": ">=17.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0"
  },
  "devDependencies": {
    "@doodle-together/typescript-config": "*",
    "@yarnpkg/pnpify": "4.0.0-rc.48",
    "eslint": "^8.45.0",
    "prisma": "^5.0.0",
    "rimraf": "^5.0.1",
    "tsup": "^7.1.0",
    "tsx": "^3.7.1",
    "typescript": "^5.1.6"
  }
}
