{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES6",
    "strictNullChecks": true,
    "isolatedModules": true,
    "moduleResolution": "Node16"
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
